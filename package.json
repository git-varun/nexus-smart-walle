{
  "name": "smart-wallet-erc4337",
  "version": "1.0.0",
  "description": "Modular Smart Wallet with ERC-4337 Account Abstraction",
  "private": true,
  "workspaces": [
    "contracts",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:contracts && npm run install:frontend",
    "install:contracts": "cd contracts && npm install",
    "install:frontend": "cd frontend && npm install",
    "build": "npm run build:contracts && npm run build:frontend",
    "build:contracts": "cd contracts && npm run compile",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:contracts",
    "test:contracts": "cd contracts && npm run test",
    "test:coverage": "cd contracts && npm run coverage",
    "dev": "concurrently \"npm run dev:contracts\" \"npm run dev:frontend\"",
    "dev:contracts": "cd contracts && npx hardhat node",
    "dev:frontend": "cd frontend && npm run dev",
    "deploy:testnet": "cd contracts && npm run deploy:base-sepolia",
    "lint": "npm run lint:contracts && npm run lint:frontend",
    "lint:contracts": "cd contracts && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "npm run clean:contracts && npm run clean:frontend",
    "clean:contracts": "cd contracts && rm -rf artifacts cache",
    "clean:frontend": "cd frontend && rm -rf dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "lerna": "^8.0.0"
  },
  "keywords": [
    "ethereum",
    "erc-4337",
    "account-abstraction",
    "smart-wallet",
    "paymaster",
    "bundler"
  ],
  "license": "MIT"
}
